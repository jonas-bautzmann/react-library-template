{
  "name": "react-library-template-storybook",
  "version": "1.0.0",
  "description": "React component library Storybook template",
  "author": "Georg Wittberger",
  "license": "MIT",
  "private": true,
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "start-storybook --port 6006",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "lint:fix": "eslint --ext .js,.ts,.tsx . --fix",
    "build": "build-storybook --output-dir dist",
    "start": "http-server dist --port 6006",
    "test:run": "concurrently --names \"E2E,VISUAL,A11Y\" \"pnpm test:e2e\" \"pnpm test:visual\" \"pnpm test:a11y\"",
    "test:e2e": "test-storybook",
    "test:visual": "jest tests/visual.test.ts",
    "test:a11y": "jest tests/a11y.test.ts",
    "ci": "pnpm build && pnpm ci:test",
    "ci:test": "concurrently --kill-others --success first --names \"SB,TEST\" --prefix-colors \"magenta,blue\" \"pnpm start --silent\" \"wait-on tcp:6006 && pnpm test:run\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-library-template-components": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@storybook/addon-a11y": "^6.5.13",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-interactions": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/addon-storyshots": "^6.5.13",
    "@storybook/addon-storyshots-puppeteer": "^6.5.13",
    "@storybook/builder-webpack5": "^6.5.13",
    "@storybook/cli": "^6.5.14",
    "@storybook/core-common": "^6.5.13",
    "@storybook/csf-tools": "^6.5.13",
    "@storybook/manager-webpack5": "^6.5.13",
    "@storybook/react": "^6.5.14",
    "@storybook/store": "^6.5.13",
    "@storybook/test-runner": "^0.6.4",
    "@storybook/testing-library": "^0.0.13",
    "@types/jest": "^29.2.4",
    "@types/node": ">=16.0.0",
    "@types/react":"^18.0.26",
    "babel-loader": "^8.3.0",
    "concurrently": "^7.6.0",
    "css-loader": "^6.7.2",
    "http-server": "^14.1.1",
    "jest": "^29.3.1",
    "jest-circus": "^29.3.1",
    "jest-environment-node": "^29.3.1",
    "jest-runner": "^29.3.1",
    "jest-svg-transformer": "^1.0.0",
    "jest-transform-stub": "^2.0.0",
    "react": "^18.2.0",
    "puppeteer": "^16.2.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.9.3",
    "wait-on": "^6.0.1",
    "webpack": "^5.75.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  }
}
